      </form>*@

    </div>
  </div>
</nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <br />
            @RenderBody()





        </main>
    </div>
    @*border-top *@
    <footer class="footer text-muted bg-primary" style="position:absolute; bottom:0; width:100%; height:60px;">
        <div class="container">
            <br />
            &copy; 2023 - Capstone Projects System - University of Benghzai / Information Technology Faculty
