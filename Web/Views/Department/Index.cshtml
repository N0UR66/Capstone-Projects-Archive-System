@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Notify"></partial>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Departments List</h2>
        </div>
        <div class="col-6 text-end">
            <a  asp-controller="Department" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Department Category
            </a>
        </div>
    </div>
    <br />


<table class="table table-bordered table-striped table-hover" style="width:100%">
    <thead>
        <tr>
            <th style="width:20%">Department Name</th>
            <th style="width:50%;text-align:center;">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td style="width:20%">@item.DepNAME</td>
                <td>
                    <center>
                    <div class="w-45 btn-group" role="group">
                     <a class="btn btn-warning" asp-controller="Department" asp-action="Edit" asp-route-id="@item.DepID"><i class="bi bi-pencil-square"></i>&nbsp Edit</a>&nbsp
                         <a class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@item.DepID"><i class="bi bi-file-earmark-x"></i>&nbsp Delete</a>



                 </div>
                        </center>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>



