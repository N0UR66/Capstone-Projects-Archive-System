@model Department



<form method="post"> @*post cuz we will be posting our data when creating department*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
               <i class="bi bi-plus-square-fill"></i> &nbsp Add a New Department
                </h2>
            <br />
        </div>

        <div class="mb-3">
            <br />
            <label asp-for="DepNAME"></label>
            <br />
            <input asp-for="DepNAME" class="form-control"/>
            <span asp-validation-for="DepNAME" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Add</button>
        <a asp-controller="Department" asp-action="Index" class="btn btn-secondary" style="wifth:150px;">Back to List</a>
    </div>




</form>

@section Scripts
{
        <partial name="_ValidationScriptsPartial"></partial>
}
